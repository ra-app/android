<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffe183"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/note_main"
        android:layout_height="wrap_content" android:background="#ffe183">

            <ImageView
                android:id="@+id/triangle"
                android:layout_alignParentRight="true"
                android:layout_width="35dp"
                android:tint="#ffd347"
                android:scaleType="fitXY"
                android:layout_height="40dp" app:srcCompat="@drawable/ic_triangle_left"></ImageView>

            <TextView
                android:id="@+id/note_date"
                android:layout_width="match_parent"
                tools:text="Date here"
                android:layout_toLeftOf="@+id/triangle"
                android:paddingLeft="14dp"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textAlignment="textStart"
                android:layout_height="wrap_content"></TextView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/note_main"
        android:padding="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="@color/red"
            app:srcCompat="@drawable/ic_location"></ImageView>

        <TextView
            android:id="@+id/note_title"
            android:layout_width="match_parent"
            android:text="Lorem ipsum dolor sit"
            android:textSize="16sp"
            style="@style/ra_text"
            android:layout_marginBottom="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/note_body"
            android:textColor="@color/ra_text"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:text="s simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing "
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>


</RelativeLayout>
