<?xml version="1.0" encoding="utf-8"?>
<org.raapp.messenger.conversation.ConversationItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray10">

    <LinearLayout
        android:id="@+id/ll_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/message_bubble_background"
        android:backgroundTint="@color/blue_100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sender"
            style="@style/Signal.Text.Preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/message_bubble_horizontal_padding"
            android:layout_marginTop="@dimen/message_bubble_top_padding"
            android:layout_marginEnd="@dimen/message_bubble_horizontal_padding"
            android:layout_marginBottom="@dimen/message_bubble_collapsed_footer_padding"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="+14152222222"
            android:textColor="@color/primary"
            tools:visibility="visible" />

        <org.raapp.messenger.components.emoji.EmojiTextView
            android:id="@+id/tv_body"
            style="@style/Signal.Text.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/message_bubble_horizontal_padding"
            android:layout_marginTop="@dimen/message_bubble_top_padding"
            android:layout_marginEnd="@dimen/message_bubble_horizontal_padding"
            android:layout_marginBottom="@dimen/message_bubble_collapsed_footer_padding"
            android:ellipsize="end"
            android:text="Mango pickle lorem ipsum ahdja"
            android:textColor="?conversation_item_received_text_primary_color"
            android:textColorLink="?conversation_item_received_text_primary_color"
            app:emoji_maxLength="1000"
            app:scaleEmojis="true" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/Signal.Text.Caption.MessageSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/message_bubble_horizontal_padding"
            android:layout_marginTop="@dimen/message_bubble_top_padding"
            android:layout_marginEnd="@dimen/message_bubble_horizontal_padding"
            android:layout_marginBottom="@dimen/message_bubble_collapsed_footer_padding"
            android:autoLink="none"
            android:linksClickable="false"
            android:text="30 mins"
            android:textAllCaps="true"
            android:textColor="?conversation_item_received_text_primary_color" />

    </LinearLayout>

</org.raapp.messenger.conversation.ConversationItem>